extends ../layout

block content
  .container
    .row
      .col-lg-2
        a.btn.btn-warning(href='/admin/category/new') 新增分类
        p
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 类别名称
            th ID
            th 影片
            th 录入时间
            th 更新
            th 删除
        tbody
          each item in categories
            tr(class = "item-id-" + item._id)
              td #{item.name}
              td #{item._id}
              td #{item.movies}
              td #{moment(item.meta,updateAt).format('MM/DD/YYYY')}
              td: a(target="_blank", href="../admin/update/"+item._id) 修改
              td
                button.delCategory.btn.btn-danger.del(type="button", data-id = "#{item._id}") 删除
  script(src="/js/admin.js")