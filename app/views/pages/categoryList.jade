extends ../layout

block content
  .container
    .row
      .col-lg-2
        a.btn.btn-warning(href='/admin/category/new') 新增分类
        p
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th.col-md-1 类别名称
            th 影片
            th.col-md-1 影片数量
            th.col-md-1 录入时间
            th.col-md-2 删除
        tbody
          each item in categories
            tr(class = "item-id-" + item._id)
              td #{item.name}
              td
                each movie in item.movies
                  #{movie.name}</br>
              td #{item.movies.length}
              td #{moment(item.meta,updateAt).format('MM/DD/YYYY')}
              td
                a.btn.btn-primary(target="_blank", href="../admin/update/"+item._id) 修改
                button.delCategory.btn.btn-danger.del(type="button", data-id = "#{item._id}") 删除
  script(src="/js/admin.js")