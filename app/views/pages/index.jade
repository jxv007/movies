extends ../layout

block content
  .container
    .row
      each cat in categories
        .panel.panel-default
          .panel-heading
            h3 #{cat.name}
          .panle-body.clearfix
            if (cat.movies && cat.movies.length > 0)
              each item in cat.movies
                .col-md-2
                  .thumbnail
                    a(href="/movie/#{item._id}")
                      img(src="#{item.poster}",alt="#{item.title}")
                    .caption
                      h3 #{item.title}
                      p: a.btn.btn-primary(href="/admin/movie/#{item._id}",role="button") 观看预告片