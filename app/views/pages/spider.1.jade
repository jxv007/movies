    .row
      - var spider = {}
      form.form-horizontal(method="post", action="/admin/spider/save")
        .form-group
          label.col-sm-3.control-label 方案
          .col-sm-7
            .btn-group.col-sm7
              button.btn.btn-default.dropdown-toggle(data-toggle = 'dropdown') 选择方案
                span.caret
              ul.dropdown-menu(role = 'menu')
                each item in spiders
                  li: a(href='#') item.title
        .form-group
          label.col-sm-3.control-label(for = "inputUrl") 方案名称
          .col-sm-7
            input#inputUrl.form-control(type = "text", name="spider[title]", value = spider.title)                  
        .form-group
          label.col-sm-3.control-label(for = "inputUrl") 要抓取的影片网址
          .col-sm-7
            input#inputUrl.form-control(type = "text", name="spider[url]", value = spider.url)
        .form-group
          label.col-sm-3.control-label(for = "inputList") 基础地址
          .col-sm-7
            input#inputList.form-control(type="text",name="spider[baseUrl]", value='')
        .form-group
          label.col-sm-3.control-label(for = "inputList") 列表容器标志
          .col-sm-7
            input#inputList.form-control(type="text",name="spider[listContainer]", value='')
        .form-group
          label.col-sm-3.control-label(for = "inputList") 列表项标志
          .col-sm-7
            input#inputList.form-control(type="text",name="spider[listTag]", value='')            
        .form-group
          label.col-sm-3.control-label(for = "inputNumber") 抓取数量
          .col-sm-7
            input#inputNumber.form-control(type="text",name="spider[maxNumber]", value='')
